{
  "compilerOptions": {
    "strict": true,
    "target": "ESNext",
    "types": ["node", "webpack-env", "jest"],
    "module": "ESNext",
    "moduleResolution": "node",
    "outDir": "dist",
    "sourceMap": true,
    "removeComments": false,
    "esModuleInterop": true,
    "declaration": true,
    "declarationMap": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true
  },
  "lib": ["es2020", "es2020.array"],
  "include": ["src/**/*", "src.tests/**/*", "src/walkSync.ts", "index.ts"],
  "exclude": ["node_modules"]
}
